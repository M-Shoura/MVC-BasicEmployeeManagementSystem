@model EmployeeDetailsDTO


<div class="row justify-content-start align-items-center mb-3">
    <div class="col-4" >
        <img src="~/files/images/@Model.Image" class="img-fluid rounded-2 w-50 h-50" alt="Employee Image" />
    </div>

</div>

@*Bootstrap Tabs*@
<ul class="nav nav-tabs" id="EmployeeTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a></a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    @*General Tab Content*@
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-label="general-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Age"></label>
                <input asp-for="Age" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Address"></label>
                <input asp-for="Address" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Salary"></label>
                <input asp-for="Salary" class="form-control" readonly />
            </div>
            <div class="form-check m-md-3">
                <input asp-for="IsActive" class="form-check-input mb-3" disabled>
                <label asp-for="IsActive" class="form-check-label"> </label>
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Department"></label>
                <input asp-for="Department" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="HiringDate"></label>
                <input asp-for="HiringDate" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" disabled />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="EmployeeType"></label>
                <input asp-for="EmployeeType" class="form-control" disabled />
            </div>
        </div>
    </div>

    @*Administration Tab Content*@
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-label="administration">
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedBy"></label>
            <input asp-for="CreatedBy" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="CreatedOn"></label>
            <input asp-for="CreatedOn" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedBy"></label>
            <input asp-for="LastModifiedBy" class="form-control" readonly />
        </div>
        <div class="form-group col-6">
            <label class="col-form-label" asp-for="LastModifiedOn"></label>
            <input asp-for="LastModifiedOn" class="form-control" readonly />
        </div>

        <div class="form-check mt-3">
            <input asp-for="IsDeleted" class="form-check-input" disabled>
            <label asp-for="IsDeleted" class="form-check-label"> </label>
        </div>

    </div>

    @if (ViewData["Title"] as string == "Details")
    {
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    }
    else
    {
        <form asp-action="Delete" asp-route-id="@Model.Id" class="mt-4">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    }
</div>
