@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="ModelOnly"></div>
		<form asp-action="SendResetPasswordEmail" method="post">
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input type="submit" value="Send Email">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp">Register Now!</a></p>
	</div>
</div>


@section ClientSideValidation {
	<partial name="_ValidationScriptsPartial" />
}
